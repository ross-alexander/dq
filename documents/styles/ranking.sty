\newenvironment{adventure}[3]{
  \def\@tempa{#3}
  \def\@tempb{}
  \pagestyle{fancy}
  \section{#1}
  \ifx\@tempa\@tempb
      \subsection{Date of Adventure}#2
  \else
      \subsection{Date of Adventure}#2 -- #3
  \fi
}
{
  \newpage
}

